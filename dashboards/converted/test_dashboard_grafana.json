        "current": {
          "value": "production",
          "text": "production"
        },
        "options": [],
        "query": "environment",
        "skipUrlSync": false,
        "hide": 0
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
