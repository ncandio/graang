{
  "id": null,
  "uid": "99d8c361",
  "title": "System Metrics Dashboard",
  "tags": [
    "converted-from-datadog"
  ],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage by Host",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "options": {
        "legend": {
          "showLegend": true
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      },
      "targets": [
        {
          "expr": "avg_over_time(system.cpu.user{{env:$env,host:$host}} by {{host}})[5m]",
          "refId": "A0",
          "instant": false,
          "legendFormat": ""
        }
      ]
    },
    {
      "id": 2,
      "title": "Memory Usage (%)",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 12,
        "h": 8
      },
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "options": {
        "legend": {
          "showLegend": true
        },
        "tooltip": {
          "mode": "single",
          "sort": "none"
        }
      },
      "targets": [
        {
          "expr": "avg_over_time(system.mem.pct_usable{{env:$env,host:$host}})[5m]",
          "refId": "A0",
          "instant": false,
          "legendFormat": ""
        }
      ]
    },
    {
      "id": 3,
      "title": "Top Disk Usage by Host",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "type": "bargauge",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "options": {
        "orientation": "horizontal",
        "displayMode": "basic",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        }
      },
      "targets": [
        {
          "expr": "avg_over_time(system.disk.in_use{{env:$env,host:$host}} by {{host}})[5m]",
          "refId": "A0",
          "instant": false,
          "legendFormat": ""
        }
      ]
    },
    {
      "id": 4,
      "title": "Current Load Average",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "options": {
        "textMode": "value",
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        }
      },
      "targets": [
        {
          "expr": "avg_over_time(system.load.1{{env:$env,host:$host}})[5m]",
          "refId": "A0",
          "instant": false,
          "legendFormat": ""
        }
      ]
    },
    {
      "id": 5,
      "title": "Dashboard Info",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 12,
        "h": 8
      },
      "type": "text",
      "content": "This dashboard shows system metrics for monitoring infrastructure health.",
      "mode": "markdown"
    }
  ],
  "templating": {
    "list": [
      {
        "name": "host",
