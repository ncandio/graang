{
  "title": "System Metrics Dashboard",
  "description": "Test dashboard for system metrics",
  "layout_type": "ordered",
  "is_read_only": false,
  "notify_list": [],
  "template_variables": [
    {
      "name": "host",
      "prefix": "host",
      "default": "*"
    },
    {
      "name": "env",
      "prefix": "environment",
      "default": "production"
    }
  ],
  "widgets": [
    {
      "definition": {
        "type": "timeseries",
        "title": "CPU Usage by Host",
        "requests": [
          {
            "q": "avg:system.cpu.user{env:$env,host:$host} by {host}",
            "display_type": "line"
          }
        ]
      }
    },
    {
      "definition": {
        "type": "timeseries",
        "title": "Memory Usage (%)",
        "requests": [
          {
            "q": "avg:system.mem.pct_usable{env:$env,host:$host}",
            "display_type": "area"
          }
        ]
      }
    },
    {
      "definition": {
        "type": "toplist",
        "title": "Top Disk Usage by Host",
        "requests": [
          {
            "q": "avg:system.disk.in_use{env:$env,host:$host} by {host}",
            "display_type": "bar"
          }
        ]
      }
    },
    {
      "definition": {
        "type": "query_value",
        "title": "Current Load Average",
        "requests": [
          {
            "q": "avg:system.load.1{env:$env,host:$host}",
            "aggregator": "last"
          }
        ]
      }
    },
    {
      "definition": {
        "type": "note",
        "title": "Dashboard Info",
        "content": "This dashboard shows system metrics for monitoring infrastructure health.",
        "background_color": "blue",
        "font_size": "12"
      }
    }
  ]
}